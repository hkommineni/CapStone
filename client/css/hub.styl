	align-items center

.hub-search-bar
	set-dimension(64px, 50%)
	border-radius 32px
	background white
	border 3px solid grey
	padding 12px
	margin 128px 0
	box-sizing border-box
	display flex
	justify-content flex-end

	&:hover
		cursor text

.hub-search-form
	set-dimension(, 90%)

.hub-search-query
	set-dimension(100%, 100%)
	border none
	outline none
	text-align right
	font-size 24px

	&::-webkit-input-placeholder
		color grey

.hub-search-icon
	set-dimension(, 64px)

	&:hover
		cursor pointer

.card-wrapper
	set-dimension(400px, 100vw)
